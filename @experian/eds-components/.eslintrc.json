// https://eslint.org/docs/user-guide/configuring
{
  "extends": "standard",
  "root": true,
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "eqeqeq": "warn",
    "indent": [
      2
    ],
    "no-return-assign": "warn",
    "no-useless-escape": "off",
    "space-before-function-paren": "off"
  },
  "env": {
    "mocha": true
  },
  "globals": {
    "agGrid": false,
    "customElements": false,
    "CustomEvent": false,
    "EDSElement": false,
    "Element": false,
    "HTMLElement": false,
    "Node": false,
    "Popper": false
  }
}